---
import { Image } from 'astro:assets';
import Github from "icons/Github.astro"
import { GITHUB_ACCOUNTS } from '../utils/const'
---

<footer>
    <section class="flex flex-row space-x-6 mb-4 items-center justify-center">
        {
            GITHUB_ACCOUNTS.map(({name, url, image}) => (
                <article class="flex flex-col items-center space-y-2">
                    <a 
                        href={url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="relative w-20 h-20 overflow-hidden rounded-full border-2 border-primary"
                    >
                        <Image src={image} alt={`Imagen de ${name}`} class="absolute" width="100" height="100" />
                        <div class="absolute inset-0 flex items-center justify-center bg-black text-white bg-opacity-50 opacity-0 hover:opacity-100 transition-opacity">
                            <Github />
                        </div>
                    </a>

                    <a
                        href={url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-primary"
                    >@{name}</a>
                </article>
            ))
        }
    </section>

    <p class="text-center text-white">Â© 2024 - SpotiEmotions</p>
</footer>