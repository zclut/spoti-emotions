const greetings = ["Buenos dÃ­as", "Buenas tardes", "Buenas noches"];
const now = new Date();
const hour = now.getHours();
const greeting = greetings.find((g, i) => i === Math.floor(hour / 8));
---

<h5
  class:list={Astro.props.class}
  class="text-[1.5rem] leading-none text-center font-bold text-white">
  {greeting},
  <span class="text-gradient"><slot name="before_title" /></span>
  <span class="text-gradient"><slot name="after_title" /></span>
</h5>

<style>
  :root {
    --accent: 14, 103, 53;
    --accent-light: 29, 154, 84;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
